<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textSize="45sp"
        android:textStyle="bold"
        app:fontFamily="cursive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="378dp"
        android:layout_height="343dp"
        android:contentDescription="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:srcCompat="@mipmap/ic_grid_background" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="328dp"
        android:layout_height="326dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textAlignment="center">


            <ImageView
                android:id="@+id/cell0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="0"
                app:srcCompat="@mipmap/ic_empty_background" />

            <ImageView
                android:id="@+id/cell1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="1"
                app:srcCompat="@mipmap/ic_empty_background" />

            <ImageView
                android:id="@+id/cell2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="2"
                app:srcCompat="@mipmap/ic_empty_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/cell3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="3"
                app:srcCompat="@mipmap/ic_empty_background" />

            <ImageView
                android:id="@+id/cell4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="4"
                app:srcCompat="@mipmap/ic_empty_background" />

            <ImageView
                android:id="@+id/cell5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="5"
                app:srcCompat="@mipmap/ic_empty_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/cell6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="6"
                app:srcCompat="@mipmap/ic_empty_background" />

            <ImageView
                android:id="@+id/cell7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="7"
                app:srcCompat="@mipmap/ic_empty_background" />

            <ImageView
                android:id="@+id/cell8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playerPush"
                android:tag="8"
                app:srcCompat="@mipmap/ic_empty_background" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/gameStatus"
        android:layout_width="354dp"
        android:layout_height="95dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@mipmap/ic_x_play" />

    <Button
        android:id="@+id/button"
        android:layout_width="383dp"
        android:layout_height="85dp"
        android:onClick="playAgain"
        android:text="Play Again"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameStatus" />

    <ImageView
        android:id="@+id/mark"
        android:layout_width="377dp"
        android:layout_height="396dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_empty_foreground"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="50dp" />


</android.support.constraint.ConstraintLayout>